rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User-scoped data
    match /users/{userId} {
      // Allow users to read/write their own user document (if we use it)
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Teams subcollection
      match /teams/{teamId} {
        // Read if owner or shared
        allow read: if request.auth != null && (request.auth.uid == userId || request.auth.uid in resource.data.sharedUids);
        // Only owner can write/delete the team document itself
        allow write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Matches subcollection
      match /matches/{matchId} {
        // Allow write if you are the owner of the user folder OR if you are a member of the team this match belongs to
        // For simplicity in rules, we check if the user is authenticated. 
        // The sync logic handles fetching correctly via collectionGroup.
        allow write: if request.auth != null;
        allow read: if request.auth != null;
      }
    }

    // Collection Group query for matches to support PublicMatchViewer and Shared access
    match /{path=**}/matches/{matchId} {
      // Anyone can 'get' a specific match for public viewing
      allow get: if true;
      // Authenticated users can query matches via collectionGroup for shared teams
      allow list: if request.auth != null;
    }

    // Collection Group query for teams to support 'Join with Code'
    match /{path=**}/teams/{teamId} {
      allow list: if request.auth != null;
    }
  }
}
